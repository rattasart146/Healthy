<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/comment_post_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="id"/>

    <TextView
        android:id="@+id/breakpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="  :  "
        app:layout_constraintStart_toEndOf="@+id/comment_post_id"/>

    <TextView
        android:id="@+id/comment_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title of post"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/breakpoint" />

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="lorem ipsum dolor"
        app:layout_constraintTop_toBottomOf="@+id/comment_user_id" />

    <TextView
        android:id="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rattasart mingkeaw"
        app:layout_constraintTop_toBottomOf="@+id/comment_content" />

    <TextView
        android:id="@+id/comment_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5412354784084d"
        app:layout_constraintTop_toBottomOf="@+id/comment_name" />

</android.support.constraint.ConstraintLayout>